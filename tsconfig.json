{
  "compilerOptions": {
    "target": "es2020",                               
    "module": "commonjs",                            
    "moduleResolution": "node",                      
    "outDir": "./dist",                             
    "rootDir": "./src",                           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                 
    "skipLibCheck": true,                         
    "resolveJsonModule": true,                         
    "allowSyntheticDefaultImports": true,            
    "sourceMap": true,                                
    "lib": ["es2020", "dom"]                         
  },
  "include": ["src/**/*"],                         
  "exclude": ["node_modules", "dist"]                
}
